---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const books = await getCollection('books');
const sortedBooks = books.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
---

<Layout title="My Books - Silence of Scribes">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-purple-400 mb-8 opacity-0 animate-fade-in">My Books</h1>
    
    <div class="grid grid-cols-1 gap-8">
      {sortedBooks.map((book, index) => (
        <div class={`opacity-0 animate-fade-in animate-delay-${(index + 1) * 100} bg-gray-800/50 backdrop-blur-sm rounded-2xl shadow-lg border border-purple-500/20 overflow-hidden hover-scale`}>
          <div class="md:flex">
            <div class="md:w-[447px] flex-shrink-0">
              <div class="h-[593px]">
                <img
                  src={book.data.coverImage}
                  alt={`${book.data.title} Book Cover`}
                  class="w-full h-full object-cover rounded-t-2xl md:rounded-l-2xl md:rounded-tr-none"
                  width="447"
                  height="593"
                />
              </div>
            </div>
            <div class="flex-grow p-8">
              <div class="flex items-center mb-4">
                <h2 class="text-2xl font-bold text-purple-400">{book.data.title}</h2>
              </div>
              
              <div class="mb-6 space-y-3">
                <div class="flex items-center text-gray-300">
                  <span class="font-medium mr-2 text-purple-400">Platform:</span>
                  <span>{book.data.platform}</span>
                </div>
                <div class="flex items-center text-gray-300">
                  <span class="font-medium mr-2 text-purple-400">Genre:</span>
                  <span>{book.data.genre}</span>
                </div>
                <div class="flex items-center text-gray-300">
                  <span class="font-medium mr-2 text-purple-400">Theme:</span>
                  <span>{book.data.theme}</span>
                </div>
                <div class="flex items-center text-gray-300">
                  <span class="font-medium mr-2 text-purple-400">Tropes:</span>
                  <span>{book.data.tropes.join(', ')}</span>
                </div>
              </div>
              
              <div class="prose text-gray-300 mb-6">
                <p>{book.data.description}</p>
              </div>
              
              <a 
                href={book.data.link}
                target="_blank" 
                class="inline-flex items-center px-6 py-3 bg-purple-500 text-white rounded-xl hover:bg-purple-600 transition-all hover:scale-105"
              >
                Read on {book.data.platform} â†’
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>