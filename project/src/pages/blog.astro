---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
---

<Layout title="Blog - Silence of Scribes">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-purple-400 mb-8 opacity-0 animate-fade-in">Blog</h1>
    
    {sortedPosts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post, index) => (
          <article class={`opacity-0 animate-fade-in animate-delay-${(index + 1) * 100} bg-gray-800/50 backdrop-blur-sm rounded-2xl shadow-lg border border-purple-500/20 overflow-hidden hover-scale`}>
            {post.data.image && (
              <img 
                src={post.data.image} 
                alt={post.data.title}
                class="w-full h-48 object-cover"
              />
            )}
            <div class="p-6">
              <h2 class="text-xl font-bold text-purple-400 mb-2">
                {post.data.title}
              </h2>
              <p class="text-gray-300 mb-4">
                {post.data.description}
              </p>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-400">
                  {new Date(post.data.publishDate).toLocaleDateString()}
                </span>
                <a 
                  href={`/blog/${post.slug}`}
                  class="text-purple-400 hover:text-purple-300 transition-all hover:scale-105 inline-block"
                >
                  Read More â†’
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl shadow-lg border border-purple-500/20 p-8 text-center opacity-0 animate-fade-in animate-delay-100 hover-scale">
        <h2 class="text-2xl font-bold text-purple-400 mb-4">Coming Soon...</h2>
        <p class="text-gray-300">Stay tuned for upcoming blog posts and updates!</p>
      </div>
    )}
  </div>
</Layout>